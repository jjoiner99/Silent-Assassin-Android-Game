<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <Button
        android:id="@+id/customButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:layout_marginTop="100dp"
        android:backgroundTint="#4BB543"
        android:text="@string/collect_bounty"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/currentLocationText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#1D2C4D"
        android:textColor="@color/white"
        android:paddingHorizontal="85dp"
        android:paddingTop="32dp"
        android:textAlignment="center"
        android:elevation="10dp"
        android:textSize="24dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/scoreText"
        android:elevation="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/score"
        android:padding="20dp"
        android:textSize="24sp"
        android:background="@color/white"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/killExplorerButton"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:text="Kill Explorer"
        android:backgroundTint="#DB5D42"
        android:textStyle="bold"
        android:layout_gravity="start|bottom"
        android:layout_margin="20dp"
        />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="180dp"
        android:layout_height="65dp"
        android:layout_gravity="end|bottom"
        android:textOn="Hide Players"
        android:textOff="Show Player"
        android:textColor="@color/white"
        android:onClick="onPlayersToggleClick"
        android:backgroundTint="#1DA1F2"
        android:layout_margin="20dp"/>


</FrameLayout>